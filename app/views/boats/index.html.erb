<h2>Boat list</h2>

<div class="cards">
  <% @results.each do |boat| %>
    <%= link_to boat_path(boat) do %>
      <div class="card-trip">
        <% unless boat.photo.key.nil?%>
        <%= cl_image_tag boat.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <div class="card-trip-infos">
          <div>

            <h2><%= boat.searchable.title %></h2>
            <p><%= truncate(boat.description, :length => 50) %></p>
            <p><%= boat.location %></p>
          </div>
          <h2 class="card-trip-pricing">$<%= boat.price %></h2>
        </div>
      </div>
      <% end %>
  <% end %>
</div>


<%= link_to "Explore", boats_path, class: "btn btn-light" %>
