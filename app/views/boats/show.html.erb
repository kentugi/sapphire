
<div class="container">
  <div class="boat-image-cards d-flex mt-3">
    <div class="product-img-main" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    </div>
  <div class="product-img-other">
      <div class="product-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg)">
      </div>
      <div class="product-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg)">
      </div>
      <div class="product-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg)">
      </div>
      <div class="product-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg)">
      </div>
    </div>
    </div>
    <div class="product-desription-form d-flex">
      <div class="product-description">
        <h1><%= @boat.title %> <%= @boat.boat_type.capitalize  %></h1>
        <h2><em><%= @boat.location%></em></h2>
        <p><%= @boat.description %></p>
      </div>
      <div class="product-form">
      <p style="color: grey"><%= @boat.price %> IDR /per day</p>
      <%= simple_form_for([@boat, @booking]) do |f| %>
        <%= f.input :start_date, html5: true, class: 'form-control' %>
        <%= f.input :end_date, html5: true, class: 'form-control'   %>
        <%= f.submit class: 'booking-button btn btn-dark' %>
      <% end %>
     </div>
    </div>
     <div class="product-map">
       <div style="width: 100%; height: 400px;"
         data-controller="mapbox"
         data-mapbox-markers-value="<%= @markers.to_json %>"
         data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
     </div>
</div>
